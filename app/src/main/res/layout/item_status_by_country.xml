<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="statusModel"
            type="company.surious.coronovirusobserver.presentation.ui.components.fragments.countries_status.StatusByCountryModel" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardBackgroundColor="@color/colorDarkGray">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{`` + statusModel.count}"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/listItemBigFontSize"
                tools:text="1111" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:text="@{`` + statusModel.countryName}"
                android:textColor="@color/colorLightGray"
                android:textSize="@dimen/listItemSmallFontSize"
                tools:text="Ukraine" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>